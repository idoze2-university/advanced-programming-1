{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb3",
                "${fileDirname}/ex1.cpp",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": "build"
        }
    ]
}